generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id             String          @id @default(uuid())
  title          String
  description    String
  thumbnail      String?
  difficulty     String          @default("Beginner")
  duration       String?
  isPublished    Boolean         @default(false)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  certificates   Certificate[]
  enrollments    Enrollment[]
  labs           Lab[]
  lessons        Lesson[]
  modules        Module[]
  introQuestions IntroQuestion[]

  @@map("courses")
}

model Enrollment {
  id          String    @id @default(uuid())
  userId      String
  courseId    String
  enrolledAt  DateTime  @default(now())
  completedAt DateTime?
  course      Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@map("enrollments")
}

model Module {
  id          String   @id @default(uuid())
  title       String
  description String?
  order       Int
  courseId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  labs        Lab[]
  lessons     Lesson[]
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("modules")
}

model Lesson {
  id        String     @id @default(uuid())
  title     String
  content   String
  videoUrl  String?
  order     Int
  courseId  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  moduleId  String?
  course    Course     @relation(fields: [courseId], references: [id], onDelete: Cascade)
  module    Module?    @relation(fields: [moduleId], references: [id])
  progress  Progress[]
  quiz      Quiz?

  @@map("lessons")
}

model Progress {
  id          String    @id @default(uuid())
  userId      String
  lessonId    String
  completed   Boolean   @default(false)
  completedAt DateTime?
  lesson      Lesson    @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@map("progress")
}

model Question {
  id            String   @id @default(uuid())
  quizId        String
  question      String
  options       String[]
  correctAnswer Int
  order         Int
  quiz          Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@map("questions")
}

model QuizAttempt {
  id          String   @id @default(uuid())
  userId      String
  quizId      String
  score       Int
  passed      Boolean
  attemptedAt DateTime @default(now())
  quiz        Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("quiz_attempts")
}

model Quiz {
  id           String        @id @default(uuid())
  lessonId     String        @unique
  title        String
  passingScore Int           @default(70)
  questions    Question[]
  attempts     QuizAttempt[]
  lesson       Lesson        @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@map("quizzes")
}

model User {
  id                       String                    @id @default(uuid())
  email                    String                    @unique
  password                 String
  firstName                String
  lastName                 String
  role                     Role                      @default(STUDENT)
  createdAt                DateTime                  @default(now())
  updatedAt                DateTime                  @updatedAt
  lastLoginAt              DateTime?
  autoPlayVideos           Boolean                   @default(true)
  courseReminders          Boolean                   @default(true)
  emailNotifications       Boolean                   @default(true)
  marketingEmails          Boolean                   @default(false)
  showProgress             Boolean                   @default(true)
  loginAttempts            Int                       @default(0)
  lastFailedLogin          DateTime?
  accountLockedUntil       DateTime?
  certificates             Certificate[]
  enrollments              Enrollment[]
  labProgress              LabProgress[]
  phishingAttempts         PhishingAttempt[]
  progress                 Progress[]
  quizAttempts             QuizAttempt[]
  introAssessmentAttempts  IntroAssessmentAttempt[]
  fullAssessmentAttempts   FullAssessmentAttempt[]

  @@map("users")
}

model Certificate {
  id       String   @id @default(uuid())
  userId   String
  courseId String
  issuedAt DateTime @default(now())
  course   Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId])
  @@map("certificates")
}

model Lab {
  id               String        @id @default(uuid())
  title            String
  description      String
  instructions     String?
  scenario         String?
  objectives       String[]
  resources        String?
  hints            String?
  difficulty       String        @default("Beginner")
  estimatedTime    Int?
  order            Int
  courseId         String
  moduleId         String?
  isPublished      Boolean       @default(false)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  labType          LabType       @default(CONTENT)
  passingScore     Int           @default(70)
  simulationConfig Json?
  progress         LabProgress[]
  course           Course        @relation(fields: [courseId], references: [id], onDelete: Cascade)
  module           Module?       @relation(fields: [moduleId], references: [id])

  @@map("labs")
}

model LabProgress {
  id          String    @id @default(uuid())
  userId      String
  labId       String
  status      LabStatus @default(NOT_STARTED)
  timeSpent   Int       @default(0)
  notes       String?
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  answers     Json?
  attempts    Int       @default(0)
  passed      Boolean?
  score       Int?
  lab         Lab       @relation(fields: [labId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, labId])
  @@map("lab_progress")
}

enum Role {
  STUDENT
  ADMIN
}

enum LabStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

enum LabType {
  CONTENT
  PHISHING_EMAIL
  SUSPICIOUS_LINKS
  PASSWORD_STRENGTH
  SOCIAL_ENGINEERING
  SECURITY_ALERTS
  WIFI_SAFETY
  INCIDENT_RESPONSE
}

enum PhishingAction {
  REPORTED
  MARKED_SAFE
  CLICKED_LINK
  DELETED
  IGNORED
}

model PlatformSettings {
  id                       String   @id @default("singleton")

  // General
  platformName             String   @default("CyberGuard AI")
  platformDescription      String   @default("Advanced cybersecurity training platform")
  supportEmail             String   @default("support@cyberguard.com")
  contactEmail             String   @default("contact@cyberguard.com")

  // Security
  requireEmailVerification Boolean  @default(false)
  minPasswordLength        Int      @default(6)
  sessionTimeout           Int      @default(7)
  enableTwoFactor          Boolean  @default(false)
  maxLoginAttempts         Int      @default(5)

  // Course Settings
  autoEnrollNewUsers       Boolean  @default(false)
  defaultCourseVisibility  String   @default("public")
  defaultQuizPassingScore  Int      @default(70)
  enableCertificates       Boolean  @default(true)
  allowCourseReviews       Boolean  @default(true)

  // User Settings
  defaultUserRole          String   @default("STUDENT")
  allowSelfRegistration    Boolean  @default(true)
  requireProfileCompletion Boolean  @default(false)
  enablePublicProfiles     Boolean  @default(false)

  // Email/Notifications
  enableEmailNotifications Boolean  @default(false)
  enableEnrollmentEmails   Boolean  @default(true)
  enableCompletionEmails   Boolean  @default(true)
  enableWeeklyDigest       Boolean  @default(false)
  smtpHost                 String   @default("")
  smtpPort                 String   @default("587")
  smtpUser                 String   @default("")
  smtpPassword             String   @default("")

  // Appearance
  primaryColor             String   @default("#3b82f6")
  secondaryColor           String   @default("#10b981")
  accentColor              String   @default("#f59e0b")
  fontFamily               String   @default("Inter")
  fontSize                 String   @default("normal")
  borderRadius             String   @default("medium")
  darkModeDefault          Boolean  @default(false)
  logoUrl                  String   @default("")
  favicon                  String   @default("")
  customCss                String   @default("") @db.Text

  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt

  @@map("platform_settings")
}

model SettingsAuditLog {
  id         String   @id @default(uuid())
  adminId    String
  adminEmail String
  action     String   @default("UPDATE")
  fieldName  String
  oldValue   String?
  newValue   String?
  ipAddress  String?
  timestamp  DateTime @default(now())

  @@map("settings_audit_log")
}

model PhishingScenario {
  id               String            @id @default(uuid())
  title            String
  description      String
  difficulty       String            @default("Beginner")
  category         String            @default("General")
  isActive         Boolean           @default(true)
  senderName       String
  senderEmail      String
  subject          String
  body             String            @db.Text
  attachments      String[]
  isPhishing       Boolean
  redFlags         String[]
  legitimateReason String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  attempts         PhishingAttempt[]

  @@map("phishing_scenarios")
}

model PhishingAttempt {
  id             String           @id @default(uuid())
  userId         String
  scenarioId     String
  userAction     PhishingAction
  isCorrect      Boolean
  responseTimeMs Int
  attemptedAt    DateTime         @default(now())
  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  scenario       PhishingScenario @relation(fields: [scenarioId], references: [id], onDelete: Cascade)

  @@map("phishing_attempts")
}

model IntroAssessment {
  id           String                    @id @default(uuid())
  title        String                    @default("Intro Skills Assessment")
  description  String?
  passingScore Int                       @default(50)
  isActive     Boolean                   @default(true)
  createdAt    DateTime                  @default(now())
  questions    IntroQuestion[]
  attempts     IntroAssessmentAttempt[]

  @@map("intro_assessments")
}

model IntroQuestion {
  id                String          @id @default(uuid())
  introAssessmentId String
  question          String
  options           String[]
  correctAnswer     Int
  explanation       String?
  courseId          String
  order             Int
  introAssessment   IntroAssessment @relation(fields: [introAssessmentId], references: [id], onDelete: Cascade)
  course            Course          @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@map("intro_questions")
}

model IntroAssessmentAttempt {
  id                String          @id @default(uuid())
  userId            String
  introAssessmentId String
  score             Int
  totalQuestions    Int
  percentage        Int
  passed            Boolean
  answers           Json
  completedAt       DateTime        @default(now())
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  introAssessment   IntroAssessment @relation(fields: [introAssessmentId], references: [id], onDelete: Cascade)

  @@map("intro_assessment_attempts")
}

model FullAssessmentAttempt {
  id             String   @id @default(uuid())
  userId         String
  score          Int
  totalQuestions Int
  percentage     Int
  passed         Boolean
  timeSpent      Int?
  timerExpired   Boolean  @default(false)
  answers        Json
  completedAt    DateTime @default(now())
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("full_assessment_attempts")
}
